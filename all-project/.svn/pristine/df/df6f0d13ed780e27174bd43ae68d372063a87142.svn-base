body {
  font-size: 14px;
  font-family: "å¾®è½¯é›…é»‘";
  background: url('../img/login/bf-login.jpg') no-repeat;
  background-size: cover;
  color: white;
}
header {
  height: 8em;
}
footer {
  padding: 12em 0 2em 0;
  text-align: center;
}
a {
  color: white;
  text-decoration: none;
}
a:hover {
  color: #e6e6e6;
}
small {
  font-size: 1em;
}
.title {
  font-size: 1.3em;
  font-weight: 300;
  letter-spacing: 0.05rem;
  text-align: center;
  margin-bottom: 2em;
}
.login_mat {
  position: relative;
  width: 280px;
  border-radius: 0.4em;
  margin: 0 auto;
}
.login_mat .content {
  margin: 0 auto;
  width: 90%;
  padding: 1em 0;
}
.login_mat .input-mat {
  position: relative;
  border-bottom: 1px solid #cccccc;
}
.login_mat .input-mat input[type=text],
.login_mat .input-mat input[type=password] {
  letter-spacing: 0.05rem;
  width: 85%;
  margin-left: 15%;
  display: block;
  border: 0;
  background-color: transparent;
  outline: none;
  color: white;
  line-height: 1.2;
  text-indent: 0.5em;
  padding: 1.2em 0 0.8em 0;
}
.login_mat .input-mat input[type=text]:-moz-placeholder,
.login_mat .input-mat input[type=password]:-moz-placeholder {
  color: white;
}
.login_mat .input-mat input[type=text]::-moz-placeholder,
.login_mat .input-mat input[type=password]::-moz-placeholder {
  color: white;
}
.login_mat .input-mat input[type=text]:-ms-input-placeholder,
.login_mat .input-mat input[type=password]:-ms-input-placeholder {
  color: white;
}
.login_mat .input-mat input[type=text]::-webkit-input-placeholder,
.login_mat .input-mat input[type=password]::-webkit-input-placeholder {
  color: white;
}
.login_mat .input-mat label {
  font-size: 1.4em;
  position: absolute;
  padding-top: 0.6em;
  padding-left: 0.4em;
}
.login_mat .input-mat #vercode_img {
  width: 90px;
  height: 25px;
  position: absolute;
  right: 0;
  top: 0.7em;
  cursor: pointer;
}
.login_mat::before {
  content: " ";
  position: absolute;
  border-radius: 0.3em;
  z-index: -1;
  width: 100%;
  height: 100%;
  opacity: 0.2;
  filter: alpha(opacity=20);
  background-color: black;
}
.clearfix {
  *zoom: 1;
}
.clearfix:before,
.clearfix:after {
  content: " ";
  display: table;
  line-height: 0;
}
.clearfix:after {
  clear: both;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.submit {
  display: block;
  width: 100%;
  margin: 3.5em auto;
  border-radius: 0.2em;
  outline: none;
  border: 0;
  padding: 0.5em;
  background-color: #12B4D8;
  color: white;
  cursor: pointer;
}
.submit:hover {
  background-color: #11a8ca;
}


