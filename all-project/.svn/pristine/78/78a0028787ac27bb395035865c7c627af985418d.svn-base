	public static String readFile(File inFile) throws IOException {
		String str = null;
		FileInputStream fis = null;

		try {
			int len = (int) (inFile.length());
			fis = new FileInputStream(inFile);
			byte buf[] = new byte[len];
			fis.read(buf);

			str = new String(buf);

		} catch (FileNotFoundException fnfe) {
			logger.error(""+fnfe);
			throw fnfe;
		} finally {
			if (fis != null)
				fis.close();
		}
		return str;
	}

